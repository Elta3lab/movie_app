<h1>The Top Trending Movies</h1>

<% if !@genres.results.empty? %>
  <% @genres.results.each do |genre| %>
    <h2><%=genre.original_title%></h2>
  <% end %>
  <% if @genres.page < @genres.total_pages %>
    <form action="/trendingmovies">
      <input type="hidden" name="page" value=<%=@genres.page+1%>>
      <input type="submit" value=<%=@genres.page%>>
    </form>
  <% end %>  
<% else %>
  <h2> there's no such page </h2>
  <form action="/trendingmovies">
    <input type="hidden" name="page" value=<%=@genres.total_pages%>>
    <input type="submit" value="Go back">
  </form>
  <form action="/">
    <input type="submit" value="Go home" />
  </form>
<% end %>



 